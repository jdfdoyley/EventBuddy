<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DoyleyRSVP2.Views.ForgotPasswordView"
    Title="Forgot Password">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="32">
        <!--<Label FontAttributes="Bold"
               FontSize="Title"
               HorizontalOptions="CenterAndExpand"
               Margin="0,0,0,32"
               Text="Forgot Password"
               TextColor="#3F51B5" />-->

        <Entry x:Name="txtEmail" Placeholder="Enter your email address" Keyboard="Email"/>
        
                
        <Button BackgroundColor="#3F51B5"
                CornerRadius="4"
                Clicked="Send_Clicked"
                Text="Send"
                TextColor="#FFF"
                WidthRequest="150"/>
        
        <Label x:Name="lblMessage"/>
    </StackLayout>
</ContentPage>

